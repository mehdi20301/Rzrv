
@using System.Globalization
@using RZRV.Authorization
@using RZRV.Web.Areas.App.Models.Currencies
@using RZRV.Web.Areas.App.Startup
@model CreateOrEditCurrencyViewModel
@using Abp.Extensions

@{
    ViewBag.CurrentPageName = AppPageNames.Common.Currencies;
}
@section Scripts
{
    <script abp-src="/view-resources/Areas/App/Views/Currencies/CreateOrEdit.js" asp-append-version="true"></script>
}
 
<abp-page-subheader title="@(Model.IsEditMode ? (L("EditCurrency")) : L("CreateNewCurrency"))" >
    <div class="kt-subheader kt-grid__item">

        <div class="kt-subheader__main">

            <span class="kt-subheader__separator kt-subheader__separator--v"></span>
            <div class="kt-subheader__breadcrumbs">
                <a href="/App/Currencies" class="kt-subheader__breadcrumbs-home"><i class="flaticon2-shelter"></i>&thinsp;@L("Currencies")</a>
                <span class="kt-subheader__breadcrumbs-separator"></span>
                <a href="javascript:;" class="kt-subheader__breadcrumbs-link kt-subheader__breadcrumbs-link--active">
                    @(Model.IsEditMode ? (L("Edit")) : L("Create"))
                </a>
            </div>
        </div>

    </div>
</abp-page-subheader>

                
            

<div class="app-content flex-column-fluid">
    <div class=" @(await GetContainerClass())">
        <form name="CurrencyInformationsForm" role="form" novalidate class="form-validation">
            <div class="kt-portlet__body">
                <div class="kt-form">
                     <div id="CurrencyInformationsTab">   
                            @if (Model.IsEditMode)
                            {
                                <input type="hidden" name="id" value="@Model.Currency.Id" />
                            }

				            
                            
				            
								<div class="form-group">
									<label for="Currency_Name">@L("Name")</label>
									<input class="form-control" id="Currency_Name" value="@Model.Currency.Name" type="text" name="name"   maxlength="@RZRV.Modal.CurrencyConsts.MaxNameLength"  minlength="@RZRV.Modal.CurrencyConsts.MinNameLength"  />
								</div>
					
                            
                    </div>
			    </div>            
            </div>
            <div class="kt-portlet__foot">
			    <div class="row align-items-center">
				    <div class="col-lg-12">
					    <button type="button" id="saveBtn" class="btn btn-success float-right"><i class="fa fa-save"></i> @L("Save")</button>
					    @if (!Model.IsEditMode)
                        {
					        <button type="button" id="saveAndNewBtn" class="btn btn-success float-right"><i class="fa fa-save"></i> @L("SaveAndNew")</button>
					    }
				    </div>
			    </div>
		    </div>
         </form>
    </div>
  
</div>